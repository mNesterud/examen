    function NextQuestion(input) {
        var max = @(Model.AllQuestions.Count);
        var next = input + 1;
        
        
        if(next <=  max){
            loadQuestion(next);
        }
        else{
            goToEmailPage();
        }
    }

    function goToEmailPage() {
        $.ajax({
            url: '/Questionnaire/EmailPage/',
            contentType: 'application/html; charset=utf-8',
